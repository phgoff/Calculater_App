<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="0dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:paddingTop="1dp"
        tools:context="com.phirathat.Calculater_App.MainActivity">


        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="@string/calculator"
            android:textColor="#418bf4"
            android:textSize="40sp"
            android:fontFamily="serif-monospace"
            />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv1"
            android:enabled="false"
            android:gravity="bottom"
            android:hint="@string/please_enter_number"
            android:lines="2"
            android:maxLines="2"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText"
            android:text="7"
            android:textSize="20sp"
            android:background="#70f9f0"/>

        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText"
            android:layout_toRightOf="@id/btn7"
            android:text="8"
            android:textSize="20sp"
            android:background="#70f9f0"/>


        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText"
            android:layout_toRightOf="@id/btn8"
            android:text="9"
            android:textSize="20sp"
            android:background="#70f9f0"/>

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn5"
            android:layout_alignBottom="@+id/btn5"
            android:layout_alignParentStart="true"
            android:text="4"
            android:textSize="20sp"
            android:background="#75f9bc" />


        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/btn8"
            android:layout_below="@id/btn8"
            android:text="5"
            android:textSize="20sp"
            android:background="#75f9bc"/>

        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/btn9"
            android:layout_below="@id/btn9"
            android:text="6"
            android:textSize="20sp"
            android:background="#75f9bc"/>

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn2"
            android:layout_alignBottom="@+id/btn2"
            android:layout_alignParentStart="true"
            android:text="1"
            android:textSize="20sp"
            android:background="#f2ff66"/>

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/btn8"
            android:layout_below="@id/btn5"
            android:text="2"
            android:textSize="20sp"
            android:background="#f2ff66"/>

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/btn9"
            android:layout_below="@id/btn6"
            android:text="3"
            android:textSize="20sp"
            android:background="#f2ff66"/>

        <Button
            android:id="@+id/btndot"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn1"
            android:text="."
            android:textSize="20sp"
            android:background="#f9868e"/>

        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/btn8"
            android:layout_below="@id/btn2"
            android:text="0"
            android:textSize="20sp"
            android:background="#f9868e"/>

        <Button
            android:id="@+id/btnclear"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/btn9"
            android:layout_below="@id/btn3"
            android:text="DEL"
            android:textSize="20sp"
            android:background="#f9867e"/>


        <Button
            android:id="@+id/btnAdd"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/btn9"
            android:layout_toRightOf="@id/btn9"
            android:text="+"
            android:textSize="20sp"
            android:background="#00cbff" />


        <Button
            android:id="@+id/btnSub"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/btn6"
            android:layout_toRightOf="@id/btn6"
            android:text="-"
            android:textSize="20sp"
            android:background="#13f256"/>

        <Button
            android:id="@+id/btnMul"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/btn3"
            android:layout_toRightOf="@id/btn3"
            android:text="*"
            android:textSize="20sp"
            android:background="#f7f200"/>

        <Button
            android:id="@+id/btnDivide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/btnclear"
            android:layout_toRightOf="@id/btnclear"
            android:text="/"
            android:textSize="20sp"
            android:background="#ff7850"/>

        <Button
            android:id="@+id/btnans"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn0"
            android:text="@string/answer"
            android:background="#00cbff"
            />


        <TextView
            android:id="@+id/tvans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnans"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:hint="@string/result"
            android:textColor="#ed4455"
            android:textSize="30sp" />

    </RelativeLayout>
</layout>
